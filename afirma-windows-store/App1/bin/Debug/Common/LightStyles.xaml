                        <Rectangle x:Name="FocusVisualBlack" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="0.5" StrokeEndLineCap="Square" Stroke="{StaticResource LightFocusVisualBlackStrokeThemeBrush}" StrokeDashArray="1,1"/>
